<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

# Restrict access to this subdomain only
RewriteCond %{HTTP_REFERER} !^http://app.ashbi.ca/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^http://app.ashbi.ca$ [NC]
RewriteCond %{HTTP_REFERER} !^https://app.ashbi.ca/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^https://app.ashbi.ca$ [NC]
RewriteRule .* - [F]

# Set PHP 7.4 as the default 
<IfModule mime_module>
    AddHandler application/x-httpd-ea-php74 .php .phtml
</IfModule>

